<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController" style="-fx-background-color: #2c3e50; -fx-padding: 20px;">
   <umm>
      <Label text="Henger Felszín Számítás" style="-fx-font-size: 24px; -fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
      <TextField fx:id="radiusField" promptText="Sugár (cm)" style="-fx-font-size: 16px; -fx-padding: 10px; -fx-background-color: #34495e; -fx-text-fill: white;" />
      <TextField fx:id="heightField" promptText="Magasság (cm)" style="-fx-font-size: 16px; -fx-padding: 10px; -fx-background-color: #34495e; -fx-text-fill: white;" />
      <Button fx:id="primaryButton" text="Számítás" onAction="#calculateSurfaceArea" style="-fx-font-size: 18px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
      <Label fx:id="resultLabel" style="-fx-font-size: 18px; -fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>
      <Label fx:id="successMessage" text="Sikeres számítás!" style="-fx-font-size: 18px; -fx-text-fill: green; -fx-font-weight: bold; visibility: hidden;"/>
   </umm>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
